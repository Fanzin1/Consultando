<div onclick="mostrar()" id="open" class="icon" style="position: absolute;">
    <button style="border: none; background-color: transparent; outline: none;"><i style="color: white;" class="fas fa-bars"></i></button>
</div>

<div id="sidebar-text" style="z-index: 99;">
    <div onclick="terminar()" id="close" class="icon" style="margin-left: 175px;">
        <button style="border: none; background-color: transparent; outline: none;"><i style="color: white;" class="fas fa-times"></i></button>
    </div>


    <ul id="menuLista">
        <li>
            <a href="/home"><i class="fas fa-house-user"></i>&nbsp&nbsp&nbsp&nbspínicio</a>
